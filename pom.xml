	<groupId>UTransProd</groupId>
	<artifactId>UTransProd</artifactId>
	<name>ProTrans</name>
	<description>St√∏ttesystem for produksjon og transport av garasjer for
		Ugland Bygg</description>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/images/</include>
					<include>**/hibernate/</include>
					<include>**/helpset/</include>
					<include>**/prod/</include>
					<include>*.xml</include>
					<include>**/reports/</include>
					<include>**/rules/</include>
					<include>*.drl</include>
					<include>*.dll</include>
				</includes>
			</resource>
			<resource>
				<filtering>true</filtering>
				<directory>src/main/resources</directory>
				<includes>
					<include>*.drl</include>
					<include>*.properties</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jaxws-maven-plugin</artifactId>
				<version>2.6</version>
				<configuration>
				<packageName>no.ugland.utransprod.service</packageName>
					<wsdlDirectory>${project.basedir}/src/main/resources/wsdl/</wsdlDirectory>
					<sourceDestDir> ${project.build.directory}/generated-sources/</sourceDestDir>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>wsimport</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>2.0-beta-1</version>
				<configuration>
					<descriptor>src/main/assembly/dep.xml</descriptor>
					<outputDirectory>target/</outputDirectory>
					<workDirectory>target/assembly/work</workDirectory>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.12</version>
				<dependencies>
					<dependency>
						<groupId>org.apache.maven.surefire</groupId>
						<artifactId>surefire-junit47</artifactId>
						<version>2.12</version>
					</dependency>
				</dependencies>
				<configuration>
					<!-- <skipTests>true</skipTests> -->
					<groups>no.ugland.utransprod.test.FastTests,no.ugland.utransprod.test.GUITests</groups>
					<exludedGroups>no.ugland.utransprod.test.ManuellTest</exludedGroups>
				</configuration>
			</plugin>

		</plugins>
	</build>
	<profiles>
		<profile>
			<id>ugland</id>
			<build>
				<resources>
					<resource>
						<filtering>true</filtering>
						<directory>src/main/resources/ugland</directory>
						<includes>
							<include>*.properties</include>
						</includes>
					</resource>
				</resources>
			</build>

		</profile>
		<profile>
			<id>bouvet</id>
			<build>
				<resources>
					<resource>
						<filtering>true</filtering>
						<directory>src/main/resources/bouvet</directory>
						<includes>
							<include>*.properties</include>
						</includes>
					</resource>
				</resources>
			</build>
			<activation>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>bouvet</name>
				</property>
			</activation>
		</profile>
	</profiles>
