<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping default-lazy="false">
<class
    name="no.ugland.utransprod.model.OrderLine"
    table="ORDER_LINE"
>
<id name="orderLineId" type="java.lang.Integer" column="ORDER_LINE_ID">
        <generator class="identity"/>
        </id>

<property
        name="realProductionHours"
        type="java.math.BigDecimal"
        column="REAL_PRODUCTION_HOURS"
        length="32"
    />
    <property
        name="numberOfItems"
        type="java.lang.Integer"
        column="NUMBER_OF_ITEMS"
        length="32"
    />

    <property
        name="dialogOrder"
        type="java.lang.Integer"
        column="DIALOG_ORDER"
        length="32"
    />
     <property
        name="produced"
        type="java.util.Date"
        column="PRODUCED"
        length="32"
    />
    <property
        name="articlePath"
        type="java.lang.String"
        column="ARTICLE_PATH"
        length="500"
    />
	<property
        name="hasArticle"
        type="java.lang.Integer"
        column="HAS_ARTICLE"
        length="32"
    />
	<property
        name="attributeInfo"
        type="java.lang.String"
        column="ATTRIBUTE_INFO"
        length="1000"
    />
	<property
        name="isDefault"
        type="java.lang.Integer"
        column="IS_DEFAULT"
        length="32"
    />
	<property
        name="actionStarted"
        type="java.util.Date"
        column="ACTION_STARTED"
        length="32"
    />
    <property
        name="ordNo"
        type="java.lang.Integer"
        column="ORD_NO"
        length="32"
    />
	<property
        name="lnNo"
        type="java.lang.Integer"
        column="LN_NO"
        length="32"
    />
    <property
        name="cuttingStarted"
        type="java.util.Date"
        column="CUTTING_STARTED"
        length="32"
    />
    <property
        name="cuttingDone"
        type="java.util.Date"
        column="CUTTING_DONE"
        length="32"
    />

    <!-- Associations -->


     <many-to-one
        name="order"
        class="no.ugland.utransprod.model.Order"
    >
        <column name="ORDER_ID" />
    </many-to-one>

    <many-to-one
        name="constructionTypeArticle"
        class="no.ugland.utransprod.model.ConstructionTypeArticle"
        not-null="true"
    >
        <column name="CONSTRUCTION_TYPE_ARTICLE_ID" />
    </many-to-one>

   <many-to-one
        name="articleType"
        class="no.ugland.utransprod.model.ArticleType"
    >
        <column name="ARTICLE_TYPE_ID" />
    </many-to-one>

    <many-to-one
        name="orderLineRef"
        class="no.ugland.utransprod.model.OrderLine"
        not-null="true"
    >
        <column name="ORDER_LINE_REF" />
    </many-to-one>
	<many-to-one
        name="postShipment"
        class="no.ugland.utransprod.model.PostShipment"
        not-null="true"
    >
        <column name="POST_SHIPMENT_ID" />
    </many-to-one>
    <set
        name="orderLineAttributes"
        lazy="true"
        inverse="true"
		cascade="all-delete-orphan"
		order-by="ORDER_LINE_ATTRIBUTE_NAME"
    >
        <key>
            <column name="ORDER_LINE_ID" />
        </key>
        <one-to-many
            class="no.ugland.utransprod.model.OrderLineAttribute"
        />
    </set>
    <set
        name="orderLines"
        lazy="true"
        inverse="true"
		cascade="all-delete-orphan"
    >
        <key>
            <column name="ORDER_LINE_REF" />
        </key>
        <one-to-many
            class="no.ugland.utransprod.model.OrderLine"
        />
    </set>

	<many-to-one
        name="colli"
        class="no.ugland.utransprod.model.Colli"
        not-null="true"
    >
        <column name="COLLI_ID" />
    </many-to-one>
	 <one-to-one
        name="externalOrderLine"
        class="no.ugland.utransprod.model.ExternalOrderLine"
        property-ref="orderLine"
    />
	<many-to-one
        name="deviation"
        class="no.ugland.utransprod.model.Deviation"
        not-null="false"
    >
        <column name="DEVIATION_ID" />
    </many-to-one>
	<many-to-one
        name="productionUnit"
        class="no.ugland.utransprod.model.ProductionUnit"
        not-null="false"
    >
        <column name="PRODUCTION_UNIT_ID" />
    </many-to-one>
	<!--many-to-one
        name="externalOrder"
        class="no.ugland.utransprod.model.ExternalOrder"
        not-null="false"
    >
        <column name="EXTERNAL_ORDER_ID" />
    </many-to-one-->


</class>
</hibernate-mapping>
